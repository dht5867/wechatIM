/* pages/chat/chat.wxss */

.container {
  width: 100%;
}

.msgs-wrapper {
  position: absolute;
  bottom: 100rpx;
  left: 10rpx;
  right: 10rpx;
  /* height: 1000rpx;
  overflow: auto; */
}

.msgs {
  max-width: 80%;
  display: block;
  padding: 5rpx;
  background: rgba(255, 255, 255, 0.7);
  margin: 5rpx 0;
  word-wrap: break-word;
}

.msg-item {
  padding: 8rpx 5rpx;
  border-radius: 4rpx;
  font-size: 14px;
}

.nickname {
  color: #ff7906;
}

.input-section {
  position: absolute;
  bottom: 20rpx;
  left: 10rpx;
  right: 10rpx;
}

.input-section input {
  background: #fff;
  margin-right: 300rpx;
  padding: 10rpx;
}

.input-section .send {
  /* background-image: url('../../assets/images/video-chat.png'); */
  background-size: 100%;
  width: 70rpx;
  height: 70rpx;
  display: block;
  position: absolute;
  right: 200rpx;
  bottom: 0;
  border: none;
  background-color: #eee;
}

.input-section .video {
  background-size: 100%;
  width: 70rpx;
  height: 70rpx;
  display: block;
  position: absolute;
  right: 100rpx;
  bottom: 0;
  border: none;
  background-color: #eee;
}

.input-section .send-voice {
  background-size: 100%;
  width: 70rpx;
  height: 70rpx;
  display: block;
  position: absolute;
  right: 0rpx;
  bottom: 0;
  border: none;
  background-color: #eee;
}

.input-section button:after {
  border: 0;
}

page {
  /* background: url(http://avc.qcloud.com/demo/webim/biggroup/mobile/img/back-img2.png); *//* background-size: 100%; */
  background: #eee;
}

.showPic {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: certer; */
}

.showPic image {
  margin: 0 auto;
}
